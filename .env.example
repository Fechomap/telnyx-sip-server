# Configuración del servidor
PORT=3000
NODE_ENV=development
API_BASE_URL=https://api.example.com

# Configuración Telnyx Principal
TELNYX_API_KEY=your_telnyx_api_key_here

# IDs de Telnyx
TELNYX_CONNECTION_ID=your_connection_id_here     # ID de tu conexión SIP
TELNYX_VOICE_APP_ID=your_voice_app_id_here       # ID de tu Voice API Application
TELNYX_OUTBOUND_PROFILE=your_profile_id_here     # ID del perfil de llamadas salientes

# Configuración SIP (opcional)
SIP_USERNAME=your_sip_username
SIP_PASSWORD=your_sip_password
SIP_SERVER=sip.telnyx.com

# Número de teléfono para transferencias de soporte (formato E.164 sin '+')
NUMERO_SOPORTE=5551234567

# Número de origen para llamadas salientes (formato E.164 con '+')
TELNYX_FROM_NUMBER=+15551234567

# Opciones de funcionalidades
ENABLE_NOISE_SUPPRESSION=false                   # Activa la supresión de ruido
ENABLE_PROGRESSIVE_TRANSFER_RETRY=true           # Activa reintentos progresivos en transferencias
ENABLE_BRIDGE_DETECTION=true                     # Activa la detección de bridge

# URL del webhook (solo para desarrollo)
# WEBHOOK_URL=https://your-ngrok-url.ngrok-free.app/webhook